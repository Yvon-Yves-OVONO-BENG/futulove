                            <div class="breadcrumb_heading">
                                <h2>{% trans %}Notre communauté{% endtrans %}</h2>
                                <p class="text-white mt-3">{% trans %}Plus qu'un groupe, une nouvelle opportunité de rencontre{% endtrans %}</p>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6">
                            <div class="breadcrumb_list">
                                <ul class="d-flex list-unstyled p-0 m-0">
                                    <li><a href="{{ path ('accueil')}}">{% trans %}Accueil{% endtrans %}</a></li>
                                    <li>
                                        <div class="scrolldown-btn">
                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                            x="0px" y="0px" width="12px" height="50px" viewBox="0 0 50 80" enable-background="new 0 0 50 80"
                                            xml:space="preserve">
                                            <path class="first-path" fill="#ff1182"
                                            d="M24.752,79.182c-0.397,0-0.752-0.154-1.06-0.463L2.207,57.234c-0.306-0.305-0.458-0.656-0.458-1.057                  s0.152-0.752,0.458-1.059l2.305-2.305c0.309-0.309,0.663-0.461,1.06-0.461c0.398,0,0.752,0.152,1.061,0.461l18.119,18.119                  l18.122-18.119c0.306-0.309,0.657-0.461,1.057-0.461c0.402,0,0.753,0.152,1.059,0.461l2.306,2.305                  c0.308,0.307,0.461,0.658,0.461,1.059s-0.153,0.752-0.461,1.057L25.813,78.719C25.504,79.027,25.15,79.182,24.752,79.182z">
                                            </path>
                                            <path class="second-path" fill="#ff1182"
                                            d="M24.752,58.25c-0.397,0-0.752-0.154-1.06-0.463L2.207,36.303c-0.306-0.304-0.458-0.655-0.458-1.057                  c0-0.4,0.152-0.752,0.458-1.058l2.305-2.305c0.309-0.308,0.663-0.461,1.06-0.461c0.398,0,0.752,0.153,1.061,0.461l18.119,18.12                  l18.122-18.12c0.306-0.308,0.657-0.461,1.057-0.461c0.402,0,0.753,0.153,1.059,0.461l2.306,2.305                  c0.308,0.306,0.461,0.657,0.461,1.058c0,0.401-0.153,0.753-0.461,1.057L25.813,57.787C25.504,58.096,25.15,58.25,24.752,58.25z">
                                            </path>
                                        </svg>
                                        </div>
                                    </li>
                                    <li>{% trans %}Notre communauté{% endtrans %}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb section end -->

    <!-- all group section start -->
    <section class="mt-5 group_section">
        <div class="container">
            <div class="row">

                {% for groupe in groupes %}
                    
                    <div class="col-x-6 col-lg-6 col-md-6">
                        <div class="search-widget_post active-group mb-4">
                            <div class="widget-content">
                            <div class="row align-items-center">
                                <div class="col-xl-5 col-lg-12 col-md-12">
                                    <div class="acamic_img">
                                        <div class="profile_img">
                                            <img src="{{ asset ('images/photoGroupes/' ~ groupe.photo)}}" alt="futulove">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-7 col-lg-12 col-md-12 mt-xl-0 mt-4">
                                    <div class="group-item lab-item border-0">
                                        <div class="lab-inner d-flex flex-wrap align-items-center ">
                                            <div class="lab-content w-100">
                                                <h4 class="mb-3">{{ groupe.nomGroupe }}</h4>
                                                <p>{{ groupe.description|truncate_40 }}...</p>
                                                
                                                {% set membreGroupes = groupe.membreGroupes|filter(membre => membre.supprime == 0) %}
                                                {% set lesMembres = membreGroupes|filter(membre => membre.etatDemande == 1) %}
                                                    
                                                <ul class="img-stack d-flex p-0">
                                                    {% for membreGroupe in lesMembres|slice(0, 6) %}
                                                        <li>
                                                            <img src="{{ asset ('images/photoProfils/' ~ membreGroupe.membre.photoProfile ) }}" style="height: 50px; width:50px; border-radius: 50%; object-fit: cover;" alt="member-img">
                                                        </li>
                                                    {% endfor %}
                                                        <li class=" mt-2" style="background-color: #FF1182;">{{ membreGroupes|length - membreGroupes|slice(0, 6)|length }}+</li>
                                                </ul>

                                                
                                                <div class="main_btn mt-4">
                                                    <a href="{{ path ('afficher_groupe', {'slug': groupe.slug })}}" class="main_btn">
                                                        <i class="fa fa-users me-2"></i> {% trans %}Afficher le groupe{% endtrans %}</a>
                                                    <div class="scrolldown-btn">
                                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg"
                                                        xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="12px" height="50px"
                                                        viewBox="0 0 50 80" enable-background="new 0 0 50 80" xml:space="preserve">
                                                        <path class="first-path" fill="#000"
                                                            d="M24.752,79.182c-0.397,0-0.752-0.154-1.06-0.463L2.207,57.234c-0.306-0.305-0.458-0.656-0.458-1.057                  s0.152-0.752,0.458-1.059l2.305-2.305c0.309-0.309,0.663-0.461,1.06-0.461c0.398,0,0.752,0.152,1.061,0.461l18.119,18.119                  l18.122-18.119c0.306-0.309,0.657-0.461,1.057-0.461c0.402,0,0.753,0.152,1.059,0.461l2.306,2.305                  c0.308,0.307,0.461,0.658,0.461,1.059s-0.153,0.752-0.461,1.057L25.813,78.719C25.504,79.027,25.15,79.182,24.752,79.182z">
                                                        </path>
                                                        <path class="second-path" fill="#000"
                                                            d="M24.752,58.25c-0.397,0-0.752-0.154-1.06-0.463L2.207,36.303c-0.306-0.304-0.458-0.655-0.458-1.057                  c0-0.4,0.152-0.752,0.458-1.058l2.305-2.305c0.309-0.308,0.663-0.461,1.06-0.461c0.398,0,0.752,0.153,1.061,0.461l18.119,18.12                  l18.122-18.12c0.306-0.308,0.657-0.461,1.057-0.461c0.402,0,0.753,0.153,1.059,0.461l2.306,2.305                  c0.308,0.306,0.461,0.657,0.461,1.058c0,0.401-0.153,0.753-0.461,1.057L25.813,57.787C25.504,58.096,25.15,58.25,24.752,58.25z">
                                                        </path>
                                                        </svg>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>  

                {% endfor %}
                
                
            </div>
        </div>
    </section>
    <!-- all group section end -->
{% endblock %}
