                                            </svg>
                                        </div>
                                    </li>
                                    <li>
                                        {% trans %}membre(s){% endtrans %}
                                        {% if rechercheMembre == true %}
                                            {% trans %}trouvé(s){% endtrans %}
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb section end -->

    
    {# # Formulaire recherche ame soeur  #}
    {% include "includes/_chercherAmeSoeur.html.twig" %}
    {# # Formulaire recherche ame soeur  #}

    <!-- all member section start -->
    <section class="our_customer_section">
        <div class="container">
            <div class="main_heading text-center">
                <h2>{% trans %}Trouver votre match parmi{% endtrans %} {{ membres|length }} {% trans %}membre(s){% endtrans %}</h2>
                <img src="assets/images/home/heading-img.png" alt="futulove">
                <p class="mt-3">
                    {% if rechercheMembre == true %}
                        {{ membres|length }} {% trans %}profil(s) qui pourraient changer votre vie{% endtrans %},
                        {{ membres|length }} {% trans %}membre(s) prêts à se connecter à vous{% endtrans %},
                        {{ membres|length }} {% trans %}nouvelle(s) opportunités de rencontres à découvir.{% endtrans %}.
                    {% endif %}
                </p>
            </div>
            <div class="row mt-5">
                {% for membre in membres %}
                    <div class="col-xl-3 col-lg-4 col-md-6 mt-4">
                        <div class="acamic_img">
                            <a href="{{ path ('afficher_profil', {'slug': membre.slug })}}">
                                <img src="{{ membre.photoProfile ? asset ('images/photoProfils/' ~ membre.photoProfile ) : ('images/photoProfils/default.png')}}" alt="futulove" style="height :300px !important">
                            </a>
                            <div class="customer_details">
                                <h4>{{ membre.nom }}</h4>
                                <p>
                                    <i class="fa-solid fa-flag"></i> 
                                    <img src="{{ membre.pays ? asset ('images/drapeaux/' ~ membre.pays.drapeau ) : asset ('images/drapeaux/default.jpeg' ) }}" alt="futulove" style="width: 30px; height :30px !important">
                                    <i class="fa-solid fa-globe"></i> {{ membre.pays ? membre.pays.pays : ""}}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                
            </div>
        </div>
    </section>
    <!-- all member section end -->

{% endblock %}
