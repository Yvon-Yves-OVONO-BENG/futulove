                                            <label>{% trans %}Âge minimum{% endtrans %} </label>
                                            <div class="row mt-2">
                                                <div class="col-12">
                                                    <div class="banner__inputlist">
                                                        <select id="agemin" name="ageMinimum" class="form-select">
                                                            <option value="">{% trans %}Sélectionner{% endtrans %}</option>
                                                            {% for age in ages %}
                                                                <option value="{{ age.id }}">{{ age.age }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            <label>{% trans %}Âge limite{% endtrans %} </label>
                                            <div class="row mt-2" id="agesup" data-path="{{ path ('chercher_age_sup')}}">
                                                <div class="col-12">
                                                    <div class="banner__inputlist">
                                                        <select id="agemax" name="ageLimite" class="form-select">
                                                            <option value="">{% trans %}Sélectionner{% endtrans %}</option>
                                                            {% for age in ages %}
                                                                <option value="{{ age.id }}">{{ age.age }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.genre) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.couleurYeux) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.couleurCheveux) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.teint) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.taille) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.poids) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.corpulance) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.cigarette) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.vin) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.langue) }}
                                        </div>
                                    </div>

