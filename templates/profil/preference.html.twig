                                    <!-- Étape 4: Informations physiques -->
                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.pays) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.region) }}
                                        </div>
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                            {{ form_row(preferenceForm.departement) }}
                                        </div>
