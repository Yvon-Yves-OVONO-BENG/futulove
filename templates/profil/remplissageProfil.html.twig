{% extends 'base.html.twig' %}

{% block title %}{% trans %}Modification du profil site de rencontre sérieux des célibataires - Futulove{% endtrans %}{% endblock %}

{% block stylesheets %}
    <style>
        .step {
            display: block;
        }

        .step.active {
            display: block;
        }

        #multi-step-form button {
            margin-top: 20px;
        }
    </style>
{% endblock %}
{% block body %}

    <!-- breadcrumb section start -->
